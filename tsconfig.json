{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "declaration": true,
    "noEmit": false,
    "baseUrl": "./",
    "paths": {
      "@lib": ["src/lib"],
      "@lib/*": ["src/lib/*"],
      "@components": ["src/lib/components"],
      "@components/*": ["src/lib/components/*"]
    }
  },
  "include": ["src/lib/**/*.ts", "src/lib/**/*.tsx"],
  "exclude": ["node_modules"]
}
